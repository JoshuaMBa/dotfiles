// Allow repeated input: defaults write com.microsoft.VSCode ApplePressAndHoldEnabled -bool false
{
    "git.confirmSync": false,
    "workbench.colorTheme": "Visual Studio 2017 Dark - C++",
    "files.autoSave": "afterDelay",
    "window.zoomLevel": 2,
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "editor.linkedEditing": true,
    "javascript.updateImportsOnFileMove.enabled": "always",    
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "bottom",
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 8,

    "editor.lineNumbers": "relative",
    "vim.leader": "<Space>",
    "vim.whichwrap": "h,l", 
    "vim.hlsearch": true, 
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<C-h>"], "commands": [":bprevious"] },
        { "before": ["<C-l>"], "commands": [":bnext"] },
        
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "s"], "commands": [":split"] },

        { "before": ["f", "j"], "commands": ["cursorPageDown"] },
        { "before": ["f", "k"], "commands": ["cursorPageUp"] },

        {
          "before": ["f", "J"],
          "commands": [
            {
              "command": "editorScroll",
              "args": {
                "to": "down",
                "by": "line",
                "value": 5,
                "revealCursor": false
              }
            }
          ]
        },
        {
          "before": ["f", "K"],
          "commands": [
            {
              "command": "editorScroll",
              "args": {
                "to": "up",
                "by": "line",
                "value": 5,
                "revealCursor": false              
              }
            }
          ]
        },
        {
            "before": ["leader", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["leader", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["leader", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["leader", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        {
            "before": ["[", "d"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["]", "d"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["leader", "c", "a"],
            "commands": ["editor.action.quickFix"]
        },
        { "before": ["leader", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["leader", "f"], "commands": ["editor.action.formatDocument"] },
        {
            "before": ["s", "d"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        }    
    ],
    "vim.visualModeKeyBindings": [ 
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
    
        { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    
        { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },

        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        }    
    ],
    "vim.insertModeKeyBindings": [
        { "before": ["j", "j"], "after": ["<Esc>"] }
    ]
}
